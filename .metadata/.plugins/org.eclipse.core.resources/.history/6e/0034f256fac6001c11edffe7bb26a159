
package ch.hearc.d_flux.a_file.a_bin.b_object;

import java.io.BufferedInputStream;
import java.io.BufferedOutputStream;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.io.Serializable;

import org.junit.jupiter.api.Assertions;

public class SerializerFile
	{
	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	public static void save(Serializable serializable, String filename) throws IOException
		{
		FileOutputStream fos = new FileOutputStream(filename);
		BufferedOutputStream bos = new BufferedOutputStream(fos);
		ObjectOutputStream oos = new ObjectOutputStream(bos);

		oos.writeObject(serializable);

		oos.close();
		bos.close();
		fos.close();
		}

	public static Serializable load(String filename) throws IOException, ClassNotFoundException
		{
		FileInputStream fis = new FileInputStream(filename);
		BufferedInputStream bis = new BufferedInputStream(fis);
		ObjectInputStream ois = new ObjectInputStream(bis);

		Serializable serializable = (Serializable)ois.readObject();

		ois.close();
		bis.close();
		fis.close();

		return serializable;
		}

	public static Serializable clone(Serializable serializable) throws IOException, ClassNotFoundException
		{
		String filename = "temp.bin";

		save(serializable, filename);
		Serializable serializableClone = load(filename);
		Assertions.assertTrue(new File(filename).delete());

		return serializableClone;
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	}
