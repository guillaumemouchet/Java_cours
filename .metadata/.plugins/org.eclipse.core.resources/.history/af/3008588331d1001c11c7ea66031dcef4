
package ch.hearc.e_socket.bin.tools.serialiseur;

import java.io.IOException;
import java.io.Serializable;

import ch.hearc.d_flux.b_objets.c_memoire.SerializerGZIP;

public class SerialiseurCrompresseur implements Serializeur_I
	{

	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/

	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	@Override
	public byte[] serialize(Serializable serializable) throws IOException
		{
		return SerializerGZIP.serialize(serializable);
		}

	@Override
	public Serializable unserialize(byte[] tabByte) throws ClassNotFoundException, IOException
		{
		return SerializerGZIP.unserialize(tabByte);
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/
	}
