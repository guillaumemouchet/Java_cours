
package ch.hearc.d_flux.a_file.a_bin.b_object;

import java.io.BufferedInputStream;
import java.io.BufferedOutputStream;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;

import org.junit.jupiter.api.Assertions;

public class SerializerFile
	{
	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	public static void save(Object object, String filename) throws IOException
		{
		FileOutputStream fos = new FileOutputStream(filename);
		BufferedOutputStream bos = new BufferedOutputStream(fos);
		ObjectOutputStream oos = new ObjectOutputStream(bos);

		oos.writeObject(object);

		oos.close();
		bos.close();
		fos.close();
		}

	public static Object load(String filename) throws FileNotFoundException
		{
		FileInputStream fos = new FileInputStream(filename);
		BufferedInputStream bos = new BufferedInputStream(fos);
		ObjectInputStream oos = new ObjectInputStream(bos);


		oos.close();
		bos.close();
		fos.close();
		}

	public static Object clone(Object object)
		{
		String filename = "temp.bin";

		save(object, filename);
		Object objectClone = load(filename);
		Assertions.assertTrue(new File(filename).delete());

		return objectClone;
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	}
