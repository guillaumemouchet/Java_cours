
package ch.hearc.b_poo.j_thread.c_vecteurs;

import org.junit.jupiter.api.Assertions;

public class AddVector
	{

	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/

	public AddVector(double[] tabV1, double[] tabV2)
		{
		Assertions.assertEquals(tabV1.length, tabV2.length);
		this.tabV1 = tabV1;
		this.tabV2 = tabV2;

		this.n = this.tabV1.length;
		this.middle = this.tabV1 / 2;

		}

	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	/*------------------------------*\
	|*				Get				*|
	\*------------------------------*/

	public double[] getTabW()
		{
		return this.tabW;
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/

	// Input
	private double[] tabV1;
	private double[] tabV2;

	// Output
	private double[] tabW;

	// Tools
	private int n;
	private int middle;
	}

